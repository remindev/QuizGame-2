<!DOCTYPE html>
<html lang="en">
<!-- 
    This is a simple and creative puzzle game
    Created by Remin T Roy
 -->

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <!-- CSS only bootsrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="stylesheet" href="<%=base_url%>/css/home.css">

</head>

<body>

    <!-- title -->
    <div class="title-cont">
        <div class="container position-relative">
            <h4 onclick="window.location.href='/'">
                <%= title %> Game
            </h4>
            <div class="right" onclick="Auth.logout()">
                <img src="<%=base_url%>/res/logout.svg" alt="">
                Logout
            </div>
        </div>
    </div>

    <div class="title-2-cont">
        <br><br><br><br>
        <!-- <div class="container">
            <h2>Play and enjoy</h2>
        </div> -->
    </div>

    <!-- levels container -->
    <div class="list-levels">
        <div class="container">

            <ul class="level">

                <% game.forEach((element,index,array)=>{ %> 

                    <li <% if(element.level<=user.level) {%> 
                          onclick="window.location.href=`<%=base_url%>/play?level=lv_<%=element.level%>`"
                        <% }; %> 
                        >

                        <% if(element.level>user.level){ %>
                            <img src="<%=base_url%>/res/lock.svg" alt=""> 
                        <% }; %> 

                        level-<%= element.level %>  
                    </li>

                <% }); %> 

            </ul>

        </div>
    </div>

    <script src="<%=base_url%>/js/home.js"></script>

</body>

</html>